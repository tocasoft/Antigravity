# Enable Rewrite Engine
RewriteEngine On

# 1. Force root to redirect to index.html with FULL DOMAIN
# This prevents Apache from trying to handle the directory and exposing the IP
RewriteRule ^/?$ https://test.geniusdevelops.com/index.html [L,R=301]

# 2. Force domain for any other request that isn't the correct domain
RewriteCond %{HTTP_HOST} !^test\.geniusdevelops\.com$ [NC]
RewriteRule ^(.*)$ https://test.geniusdevelops.com/$1 [L,R=301]

# 3. URL Masking Examples (kept for reference)
RewriteRule ^prueba$ index.html [L]
